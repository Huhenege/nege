rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is an admin
    function isAdmin() {
      return request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Role-based access for the users collection
    match /users/{userId} {
      // Allow creating own profile during signup
      allow create: if request.auth != null && request.auth.uid == userId;
      
      // Allow user to read/update own profile
      allow read, update: if request.auth != null && request.auth.uid == userId;
      
      // Admins can manage all users
      allow list, delete: if isAdmin();
      allow read, update: if isAdmin();
    }

    // Admin-only collections (Sensitive data)
    match /qpayInvoices/{invoiceId} {
      allow read: if isAdmin() || (request.auth != null && resource.data.userId == request.auth.uid);
      allow write: if isAdmin();
    }

    match /qpayGrants/{grantId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }

    match /creditTransactions/{txId} {
      allow read: if isAdmin() || (request.auth != null && resource.data.userId == request.auth.uid);
      allow write: if isAdmin();
    }

    match /usageLogs/{logId} {
      allow read: if isAdmin() || (request.auth != null && resource.data.userId == request.auth.uid);
      allow write: if isAdmin();
    }
    
    match /bookings/{bookingId} {
      allow read: if isAdmin();
      allow create: if request.auth != null;
      allow update, delete: if isAdmin();
    }
    
    match /trainings/{trainingId} {
      allow read: if true; // Publicly readable for the booking page
      allow create, update, delete: if isAdmin();
    }

    match /logs/{logId} {
      allow read, write: if isAdmin();
    }
    
    match /settings/{settingId} {
      allow read: if true; // Some settings might be public
      allow write: if isAdmin();
    }

    match /audit_logs/{logId} {
      allow read, write: if isAdmin();
    }

    match /letterheadTemplates/{templateId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow update: if request.auth != null
        && resource.data.userId == request.auth.uid
        && request.resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Default deny for anything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
